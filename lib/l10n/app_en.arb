{
  "@@locale": "en",

  "appTitle": "Meteograph",
  "@appTitle": {
    "description": "App name shown in title bar and widget"
  },

  "temperature": "Temperature",
  "@temperature": {
    "description": "Label for temperature data on chart"
  },

  "precipitation": "Precipitation",
  "@precipitation": {
    "description": "Label for precipitation data on chart"
  },

  "cloudCover": "Cloud cover",
  "@cloudCover": {
    "description": "Label for cloud cover data"
  },

  "now": "Now",
  "@now": {
    "description": "Label for current time indicator on chart"
  },

  "updatedAt": "Updated {time}",
  "@updatedAt": {
    "description": "Shows when weather data was last refreshed",
    "placeholders": {
      "time": {
        "type": "String",
        "example": "5 min ago"
      }
    }
  },

  "minutesAgo": "{count} min ago",
  "@minutesAgo": {
    "description": "Time elapsed in minutes",
    "placeholders": {
      "count": {
        "type": "int",
        "example": "5"
      }
    }
  },

  "justNow": "Just now",
  "@justNow": {
    "description": "Shown when data was updated less than a minute ago"
  },

  "refresh": "Refresh",
  "@refresh": {
    "description": "Button to manually refresh weather data"
  },

  "settings": "Settings",
  "@settings": {
    "description": "Settings screen title"
  },

  "location": "Location",
  "@location": {
    "description": "Location settings label"
  },

  "currentLocation": "Current location",
  "@currentLocation": {
    "description": "Option to use GPS location"
  },

  "setManually": "Set manually",
  "@setManually": {
    "description": "Option to set location manually"
  },

  "errorNoConnection": "No internet connection",
  "@errorNoConnection": {
    "description": "Error shown when network is unavailable"
  },

  "errorLocationUnavailable": "Location unavailable",
  "@errorLocationUnavailable": {
    "description": "Error when GPS/location cannot be determined"
  },

  "errorLoadingData": "Could not load weather data",
  "@errorLoadingData": {
    "description": "Generic error when API request fails"
  },

  "retry": "Retry",
  "@retry": {
    "description": "Button to retry failed operation"
  },

  "offline": "OFFLINE",
  "@offline": {
    "description": "Watermark shown on chart when displaying cached data"
  },

  "forecastHours": "{hours}-Hour Forecast",
  "@forecastHours": {
    "description": "Label showing forecast duration",
    "placeholders": {
      "hours": {
        "type": "int",
        "example": "46"
      }
    }
  },

  "maxPrecipitation": "Max {amount}",
  "@maxPrecipitation": {
    "description": "Maximum precipitation in forecast",
    "placeholders": {
      "amount": {
        "type": "String",
        "example": "2.5 mm"
      }
    }
  },

  "maxDaylight": "Max {percent}%",
  "@maxDaylight": {
    "description": "Maximum daylight in forecast",
    "placeholders": {
      "percent": {
        "type": "int",
        "example": "75"
      }
    }
  },

  "precipitationRate": "{amount} mm/h",
  "@precipitationRate": {
    "description": "Precipitation rate shown on chart",
    "placeholders": {
      "amount": {
        "type": "String",
        "example": "2.5"
      }
    }
  },

  "locationSourceGps": "GPS",
  "@locationSourceGps": {
    "description": "Short label for GPS location source"
  },

  "@locationSourceIp": {
    "description": "Short label for IP-based location source"
  },

  "locationSourceManual": "Manual",
  "@locationSourceManual": {
    "description": "Short label for manually set location"
  },

  "daylight": "Daylight",
  "@daylight": {
    "description": "Legend label for sunshine/daylight bars on chart"
  },

  "weatherDataBy": "Weather data by {provider} (CC BY 4.0)",
  "@weatherDataBy": {
    "description": "Attribution text for weather data provider with license",
    "placeholders": {
      "provider": {
        "type": "String",
        "example": "Open-Meteo.com"
      }
    }
  },

  "daylightDerived": "Daylight derived",
  "@daylightDerived": {
    "description": "Note indicating daylight values are calculated from cloud data (CC BY 4.0 modification disclosure)"
  },

  "sourceCode": "Open source on GitHub (BSL 1.1)",
  "@sourceCode": {
    "description": "Link text for source code repository in footer with license"
  },

  "offlineRefreshError": "Unable to refresh - showing cached data",
  "@offlineRefreshError": {
    "description": "Snackbar message when refresh fails but cached data is available"
  },

  "loadingWeather": "Loading weather...",
  "@loadingWeather": {
    "description": "Loading indicator text while fetching weather data"
  },

  "unableToLoadWeather": "Unable to load weather",
  "@unableToLoadWeather": {
    "description": "Error message when weather data cannot be loaded"
  },

  "unknownLocation": "Unknown",
  "@unknownLocation": {
    "description": "Fallback text when location name is not available"
  },

  "gpsPermissionDenied": "GPS permission denied. Enable in device settings.",
  "@gpsPermissionDenied": {
    "description": "Snackbar message when GPS permission is denied"
  },

  "searchConnectionError": "Unable to search - check your connection",
  "@searchConnectionError": {
    "description": "Error message when city search fails due to network"
  },

  "selectLocation": "Select Location",
  "@selectLocation": {
    "description": "Title for location selection dialog"
  },

  "searchCityHint": "Search city...",
  "@searchCityHint": {
    "description": "Placeholder text in city search field"
  }
