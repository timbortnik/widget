<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/WidgetTheme"
    android:background="?android:attr/colorBackground"
    android:alpha="0.85">

    <!-- Chart image (fills entire widget)
         IMPORTANT: Do NOT use scaleType="centerCrop" or "fitXY" - cropping is forbidden,
         and fitXY causes blurry scaling. Use fitCenter to preserve full image quality. -->
    <ImageView
        android:id="@+id/widget_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:contentDescription="Weather forecast chart" />

    <!-- Placeholder -->
    <TextView
        android:id="@+id/widget_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Tap to load forecast"
        android:textSize="13sp"
        android:textColor="#66FFFFFF"
        android:fontFamily="sans-serif" />

    <!-- Refresh indicator (shown after resize) -->
    <TextView
        android:id="@+id/widget_refresh_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="â†»"
        android:textSize="64sp"
        android:textColor="#CCFFFFFF"
        android:visibility="gone" />

</FrameLayout>
