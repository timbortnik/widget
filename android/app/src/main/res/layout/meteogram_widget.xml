<?xml version="1.0" encoding="utf-8"?>
<!-- Widget layout with transparent chart PNG over system background.
     Background uses ?android:attr/colorBackground to match other system widgets (Google Search bar).
     Chart images are rendered with transparent background in Flutter. -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/WidgetTheme"
    android:background="?android:attr/colorBackground"
    android:alpha="0.80"
    android:clipToOutline="false"
    android:outlineProvider="none">

    <!-- Chart images - two versions for automatic theme switching.
         When launcher re-inflates layout on theme change, correct one becomes visible.
         IMPORTANT: Do NOT use scaleType="centerCrop" or "fitXY" - cropping is forbidden,
         and fitXY causes blurry scaling. Use fitCenter to preserve full image quality. -->
    <ImageView
        android:id="@+id/widget_chart_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:visibility="@integer/chart_light_visibility"
        android:contentDescription="Weather forecast chart" />
    <ImageView
        android:id="@+id/widget_chart_dark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:visibility="@integer/chart_dark_visibility"
        android:contentDescription="Weather forecast chart" />

    <!-- Placeholder -->
    <TextView
        android:id="@+id/widget_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Tap to load forecast"
        android:textSize="13sp"
        android:textColor="@color/widget_placeholder_text"
        android:fontFamily="sans-serif" />

    <!-- Refresh indicator (shown after resize or theme change) -->
    <TextView
        android:id="@+id/widget_refresh_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="â†»"
        android:textSize="64sp"
        android:textColor="?android:attr/textColorPrimary"
        android:shadowColor="@color/widget_shadow"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:visibility="gone" />

</FrameLayout>
