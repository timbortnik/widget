<?xml version="1.0" encoding="utf-8"?>
<!--
  Widget color resources.

  IMPORTANT: Widget background uses ?android:attr/colorBackground (system theme attribute)
  in meteogram_widget.xml. This ensures automatic matching with other system widgets
  like Google Search bar. Chart PNG is rendered with transparent background.
-->
<resources>
    <!-- Legacy widget surface color - kept for backwards compatibility -->
    <color name="widget_surface">@android:color/background_light</color>

    <!-- Placeholder text - subtle hint text -->
    <color name="widget_placeholder_text">#66000000</color>

    <!-- Shadow color for overlay elements -->
    <color name="widget_shadow">#80000000</color>
</resources>
